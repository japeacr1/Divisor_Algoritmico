{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar y Simular",
            "type": "shell",
            "command": "vsim -c -do \"run.do\"",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Compila y simula el diseño usando Questasim",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
                "close": true
            },
            "dependsOn": "Limpiar Directorio de Trabajo"
        },
        {
            "label": "Limpiar Directorio de Trabajo",
            "type": "shell",
            "command": "powershell -Command \"Remove-Item -Path 'work' -Recurse -Force; New-Item -ItemType Directory -Path 'work'\"",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "detail": "Limpia la carpeta de trabajo eliminando y recreando la carpeta 'work'",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
                "close": true
            }
        },
        {
            "label": "Actualizar y subir a GitHub",
            "type": "shell",
            "command": "powershell -Command \"git add .; git commit -m 'Actualización de archivos'; git push\"",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Añade, comitea y sube los cambios a GitHub",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
                "close": true
            }
        }
    ]
}
